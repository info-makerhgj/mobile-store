// Homepage Configuration Schema - Dynamic Sections System
// Shopify-like flexible page builder

model HomepageConfig {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Dynamic Sections - can be reordered and repeated
  sections Section[]
}

// Universal Section Type - supports all content types
type Section {
  id       String
  type     String  // "hero", "categories", "products", "banner", "text", "image-grid", "custom"
  title    String?
  subtitle String?
  order    Int
  active   Boolean
  settings Json    // Flexible settings for each section type
  content  Json    // Flexible content structure
}

